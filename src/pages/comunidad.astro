---
const testimonios = [
  { nombre: "Cristian Veizan", mensaje: "Estoy muy satisfecho con los productos de esta empresa. Calidad y servicio excepcionales." },
  { nombre: "Keivi Vega", mensaje: "Increíble atención al cliente y productos de primera. ¡Recomendado al 100%!" },
  { nombre: "Oscar Segales", mensaje: "Siempre compro aquí y nunca me han decepcionado. Excelente calidad." },
  { nombre: "Andrew Cameo", mensaje: "El mejor lugar para encontrar lo que necesito. Gran variedad y buen precio." }
];
const { title = 'Default Title' } = Astro.props;
import Footerr from "../components/footerr.astro";
import Headerr from "../components/headerr.astro";
---
<html lang="es">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Bebas+Neue&family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Title</title>
</head>
<body>
    <Headerr/>
<section class="comunidad">
  <div class="comunidad-top">
    <h2 class="titulo">Nuestra Comunidad</h2>
    <p class="descripcion">Descubre lo que nuestros clientes opinan sobre nuestros productos y servicios.</p>
    <img src="/images/comunidad.webp" alt="Comunidad">
  </div>
  <div class="testimonios">
    {testimonios.map(({ nombre, mensaje }) => (
      <div class="testimonio">
        <p class="mensaje">“{mensaje}”</p>
        <span class="autor">- {nombre}</span>
      </div>
    ))}
  </div>
</section>
<Footerr/>
<style>
  .comunidad {
    padding: 40px 20px;
    text-align: center;
    background:#E5E7EB;
    height: 100vh;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-items: center;
  }
  .titulo {
    font-size: 2rem;
    margin-bottom: 10px;
    color: #FC4C02;
    font-family: "Myriad Pro", sans-serif;
  }
  .descripcion {
    font-size: 1.2rem;
    margin-bottom: 20px;
    color: #555;
    font-family: "Myriad",sans-serif;
  }
  .testimonios {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }
  .testimonio {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  .mensaje {
    font-family: "Myriad", sans-serif;
    font-size: 1rem;
    color: #444;
  }
  .autor {
    display: block;
    margin-top: 10px;
    font-weight: bold;
    color: #222;
  }
  @media (max-width: 600px) {
    .titulo {
      font-size: 1.5rem;
    }
    .descripcion {
      font-size: 1rem;
    }
    .comunidad{
      height: 200vh;
    }
    .comunidad img{
      width: 15rem;
      margin-bottom: 2rem;
    }
  }
</style>

</body>
</html>